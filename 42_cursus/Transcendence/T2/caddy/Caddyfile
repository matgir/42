{
	https_port 4443
	http_port 8080
}

localhost {
	handle_path /static/* {
		root * /app/staticfiles
		file_server browse
	}

	handle /media/* {
		root * /app
		file_server browse
	}

	handle {
		reverse_proxy the_transcendence:8000
	}

	reverse_proxy /ws/* the_transcendence:8000 {
		flush_interval -1
	}

	encode gzip
	tls internal
}